{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Jekyll Site",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "jekyll",
                    "pattern": {
                        "regexp": "^.*$"
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Configuration file:",
                        "endsPattern": "Server running..."
                    }
                }
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "bundle install --path vendor/bundle",
            "group": "build"
        }
    ]
}